{
  "manifest_version": 3,
  "name": "LeakWatch Sensor",
  "version": "1.0",
  "description": "Monitors clipboard/copy and reports to LeakWatch proxy",
  "permissions": ["storage"],
  "host_permissions": [
    "http://127.0.0.1:8080/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
